<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/groupRightChatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowPosition="right"
        app:cmv_arrowGravity="start"
        android:visibility="gone"
        app:cmv_arrowMargin="3dp"
        android:padding="5dp"
        app:cmv_contentPadding="10dp"
        app:cmv_backgroundColor="#884dca60"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_userNameRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#f78075"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tv_groupChatMsgSetRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_userNameRight"/>


        <TextView
            android:id="@+id/tv_groupChatTimeSetRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_groupChatMsgSetRight"
            android:textSize="10dp"
            android:layout_marginTop="5dp"/>


    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/groupLeftChatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowPosition="left"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="3dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:cmv_contentPadding="10dp"
        app:cmv_backgroundColor="#888bdaf7"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        android:gravity="left"
        android:layout_below="@+id/groupRightChatView">

        <TextView
            android:id="@+id/tv_userNameLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f78075"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tv_groupChatMsgSetLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userNameLeft"/>


        <TextView
            android:id="@+id/tv_groupChatTimeSetLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_groupChatMsgSetLeft"
            android:textSize="10dp"
            android:layout_marginTop="5dp"/>

    </me.himanshusoni.chatmessageview.ChatMessageView>



</RelativeLayout>